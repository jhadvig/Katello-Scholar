%h2.section
	= params[:action].capitalize
	= params[:controller].singularize.gsub("_"," ")
%ul.nav.nav-tabs

=form_for @operating_system do |c|

	.name.control-group
		= c.label :name
		= c.text_field :name, :disabled => true
	.major.control-group
		= c.label :major
		= c.text_field :major, :disabled => true
	.minor.control-group
		= c.label :minor
		= c.text_field :minor, :disabled => true
	.os-family.control-group
		= c.label :os_family
		= c.text_field :os_family, :disabled => true
	.architecture.control-group
		= c.label :architecture
		= c.text_field :architecture_id, :value=>@architecture.name, :disabled => true
	.path.control-group
		= c.label :path
		= c.text_area :path

	%div.control-group
	= c.submit :class=>"btn btn-info"

= render :partial=>"shared/back"