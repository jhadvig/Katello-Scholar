%h4.section
	Course Info:



-@course.attributes.each do |k,v|
	%div
		%span 
			-if k == "status"
				%strong #{k.capitalize} :
				#{Course::STATUS.key(v)}
			-else
				%strong #{k.capitalize} :
				#{v}
%br
%br

=link_to "Edit Course", edit_course_path(@course), :class=>"btn btn-info course-edit-path"
