
%h2.section
	= params[:controller].capitalize
%ul.nav.nav-tabs
.table_info
	%span.muted.count
		= "Viewing #{@courses.count} of #{@courses.count} results (#{@courses.count} Total Courses)"
		= link_to "+ New", new_course_path, :class=>"btn btn-info courses-new-path"


%ul.nav.nav-tabs

%form.form-search.pull-right
	%input.input-medium.search-query{:type => "text", :placeholder=>"Course code or name"}
	%button.btn{:type => "text"} Search


.btn-group.settings
	%a.btn.dropdown-toggle.user-button{"data-toggle"=>"dropdown", :href =>"#{}"}
		Action
		%span.caret
	%ul.dropdown-menu
		%li
			%a{:href=>"#"} Edit
		%li
			%a{:href=>root_path} ...
		%li
			%a{:href=>root_path} ...

%br
%br

.courses-table

	%table.table-striped.table-bordered.table-hover.table-bordered.courses
		%thead
			%tr
				%th.checkbox.check_all
					%label.checkbox
						%input{:type =>"checkbox", :value=>0}

				%th.course_name Course Name
				%th.seminars Seminars 
				%th.labs Labs				
				%th.students Students
				%th.last_report Last Report
				%th.action Action
		%tbody

			- @courses.each do |course|

				%tr
					%td.checkbox
						%label.checkbox
							%input{:type =>"checkbox", :value=>0}
					%td.course_name 
						#{course.code} : #{course.name}
					%td.seminars #{course.seminars_count} 
					%td.environment 
					%td.lab 
					%td.last_report 
					%td.action
						.btn-group.table-action-button
							=link_to "Edit", edit_course_path(course), :class=>"btn btn-small edit"
							%button.btn.btn-small.dropdown-toogle{"data-toggle"=>"dropdown", :href =>"#{}"}
								%span.caret
							%ul.dropdown-menu
								%li 
									= link_to "Clone", clone_course_path(course)
								%li 
									= link_to "Delete", course, :confirm => "Destroy course #{course.code}: #{course.name}?", :method => :delete, :class=>"delete"

