= form_for @lab, :html => { :class=>"form-horizontal"} do |c|
	.name.control-group
		= c.label :name
		= c.text_field :name, :placeholder => "Name of the lab", :title=>" 3 to 50 characters"
	.status.control-group
		= c.label :course_status
		= c.select :status, options_for_select(Lab::STATUS)
	.info.control-group
		= c.label :info
		= c.text_area :info, :size => "25x5", :placeholder => "Info about lab ..."
	%div.control-group
		= c.submit :class=>"btn btn-info"